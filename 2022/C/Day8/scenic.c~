#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define PATH "./input"
#define COLUMNS 5
#define ROWS 5

void dumpMatrix(int matrix[ROWS][COLUMNS]);

int main(void) {
    FILE *treeMap;
    if ((treeMap = fopen(PATH, "r")) == NULL) {
	puts("File Not Found");
	exit(1);
    }

    char *line = NULL;
    int lineNum = 0;
    size_t len = 0;
    ssize_t read;

    int treeMatrix[ROWS][COLUMNS];
    int seenMatrix[ROWS][COLUMNS];

    while ((read = getline(&line, &len, treeMap)) != -1) {
	for (int i = 0; i < COLUMNS; i++) {
	    treeMatrix[lineNum][i] = (line[i] - '0');
	    seenMatrix[lineNum][i] = 1;
	}

	lineNum++;
    }

    free(line);
    fclose(treeMap);
    return 0;
}

// general functions

void dumpMatrix(int matrix[ROWS][COLUMNS]) {
    for (int i = 0; i < ROWS; i++) {
	for (int j = 0; j < COLUMNS; j++) {
	    printf("%d", matrix[i][j]);
	}

	putchar('\n');
    }    
}
